@model LojaVirtual.Models.Produto

@{
    ViewData["title"] = "Página Excluir de Produtos";
    var produto = Model;
}

<form action="/produtos/excluir" method="post">
    <input type="hidden" name="Id" value="@produto.Id" />
    <label>Identificador: </label><p>@produto.Id</p>
    <label>Nome: </label><p>@produto.Nome</p>
    <label>Preço: </label><p>@produto.Preco</p>
    <input type="submit" value="Salvar Alterações" />
    <a href="/produtos/listar">Voltar para Lista</a>
</form>
