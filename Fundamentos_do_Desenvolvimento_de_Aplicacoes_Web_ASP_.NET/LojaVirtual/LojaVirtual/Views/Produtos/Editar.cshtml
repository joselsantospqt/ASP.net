@model LojaVirtual.Models.Produto
@{
    ViewData["title"] = "Página Edição de Produtos";
    var produto = Model;
}

<form action="/produtos/editar" method="post">
    Identificador: <input name="id" value="@produto.ID" readonly />
    nome: <input name="nome"  type="text" value="@produto.NM_NOME" />
    preco: <input name="preco"  type="text" value="@produto.NR_PRECO" />
    quantidade: <input name="quantidade"  type="number" step=0.01 value="@produto.NR_QUANTIDADE" />
    <input type="submit" value="Salvar Alterações" />
</form>
