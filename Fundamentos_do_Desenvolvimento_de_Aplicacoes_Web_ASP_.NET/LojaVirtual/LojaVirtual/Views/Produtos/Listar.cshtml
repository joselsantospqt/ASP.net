@{
    @model List<LojaVirtual.Controllers.Produto>
    var listaDeProdutos = Model;
}



<h3>Lista de Produtos</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">nome</th>
            <th scope="col">preço</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in listaDeProdutos)
            {
                <tr>
                    <th scope="row">@listaDeProdutos.IndexOf(item)</th>
                    <td>@item.Nome</td>
                    <td>@item.Preco</td>
                </tr>

            }
        }
    </tbody>
</table>