@{
    ViewData["title"] = "Página de Cadastro";
}

<form action="/pessoas/executarcadastrodepessoas" method="post">

        <div class="form-group">
            <label for="Nome">Nome:</label>
             <input id="Nome" class="form-control" name="nome" type="text" />
        </div>
        <div class="form-group">
            <label for="Sobrenome">Sobrenome:</label>
            <input id="Sobrenome" class="form-control" name="sobrenome" type="text" />
        </div>
        <div class="form-group">
            <label for="DtNascimento">Nascimento:</label>
            <input id="DtNascimento" class="form-control" name="nascimento" type="datetime" />
        </div>
        <input class="btn btn-primary" type="submit" value="Cadastrar" />

</form>
